	"URL-encodes string": {
        "prefix": "php2go: urlencode",
        "body": [
			"url.QueryEscape(${1:str})"
        ],
        "description": "URL-encodes string."
    },

	"Decodes URL-encoded string": {
        "prefix": "php2go: urldecode",
        "body": [
			"url.QueryUnescape(${1:str})"
        ],
        "description": "Decodes URL-encoded string."
    },

	"URL-encode according to RFC 3986": {
        "prefix": "php2go: rawurlencode",
        "body": [
			"strings.Replace(url.QueryEscape(${1:str}), \"+\", \"%20\", -1)"
        ],
        "description": "URL-encode according to RFC 3986."
    },

	"Decode URL-encoded strings from RFC 3986": {
        "prefix": "php2go: rawurldecode",
        "body": [
			"url.QueryUnescape(strings.Replace(${1:str}, \"%20\", \"+\", -1))"
        ],
        "description": "Decode URL-encoded strings from RFC 3986."
    },

	"Encodes data with MIME base64": {
        "prefix": "php2go: base64_encode",
        "body": [
			"base64.StdEncoding.EncodeToString([]byte(${1:str}))"
        ],
        "description": "Encodes data with MIME base64."
    },

	"Decodes data encoded with MIME base64": {
        "prefix": "php2go: base64_decode",
        "body": [
			"func(str string) (string, error) {",
			"    switch len(str) % 4 {",
			"    case 2:",
			"        str += \"==\"",
			"    case 3:",
			"        str += \"=\"",
			"    }",
			"",
			"    data, err := base64.StdEncoding.DecodeString(str)",
			"    if err != nil {",
			"        return \"\", err",
			"    }",
			"    return string(data), nil",
			"}(${1:str})"
        ],
        "description": "Decodes data encoded with MIME base64."
    },

	"Calculate the md5 hash of a string": {
        "prefix": "php2go: md5",
        "body": [
			"func(str string) string {",
			"    hash := md5.New()",
			"    hash.Write([]byte(str))",
			"    return hex.EncodeToString(hash.Sum(nil))",
			"}(${1:str})"
        ],
        "description": "Calculate the md5 hash of a string."
    },

	"Calculates the md5 hash of a given file": {
        "prefix": "php2go: md5_file",
        "body": [
			"func(filename string) (string, error) {",
			"    f, err := os.Open(filename)",
			"    if err != nil {",
			"        return \"\", err",
			"    }",
			"    defer f.Close()",
			"    h := md5.New()",
			"    if _, err := io.Copy(h, f); err != nil {",
			"        return \"\", err",
			"    }",
			"    return hex.EncodeToString(h.Sum(nil)), nil",
			"}(${1:filename})"
        ],
        "description": "Calculates the md5 hash of a given file."
    },

